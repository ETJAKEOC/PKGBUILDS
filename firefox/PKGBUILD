pkgver() {
  cd mozilla-central
  local version=$(<browser/config/version_display.txt)
  local date=$(date +%Y%m%d)
  local counter=1
  local rev=$(hg id -i -r. | sed 's/+$//')
  local last_rev=${pkgver##*+h} tmp=${pkgver#*+}; tmp=${tmp%+*}
  local last_date=${tmp%.*} last_counter=${tmp#*.}
  if [[ $date == $last_date ]]; then
    if [[ $rev == $last_rev ]]; then
      counter=$last_counter
    else
      counter=$((last_counter + 1))
    fi
  fi
  echo $version+$date.$counter+h$rev
}

prepare() {
  mkdir -p "${srcdir}/mozbuild"
  chmod +x "${srcdir}/expect.sh" && mv "${srcdir}/expect.sh" "${srcdir}/mozilla-central"
  mv "${srcdir}/mozconfig" "${srcdir}/mozilla-central/mozconfig"
  mv "${srcdir}/google-api-key" "${srcdir}/mozilla-central/google-api-key"
}

_env() {
  # Toolchain consistency
  export CC=clang
  export CPP=clang-cpp
  export CXX=clang++
  export LD=lld
  export CC_LD=lld
  export CXX_LD=lld
  export AR=llvm-ar
  export NM=llvm-nm
  export STRIP=llvm-strip
  export OBJCOPY=llvm-objcopy
  export OBJDUMP=llvm-objdump
  export READELF=llvm-readelf
  export RANLIB=llvm-ranlib
  export HOSTCC=clang
  export HOSTCXX=clang++
  export HOSTAR=llvm-ar
  export HOSTLD=lld

  # Generic tuning
  export JS_GC_SMALL_CHUNK_SIZE=4096
  export MOZ_JIT_THREAD_PRIORITY=high
  export MOZ_JIT_USE_FAST_ISOLATED_HEAPS=1
  export MOZ_JIT_THREAD_STACK_SIZE=4096
  export MOZ_JIT_OPT_LEVEL=3
  export MOZ_LTO_OPTLEVEL=3
  export MOZ_AVX2=1
  export LLVM_PROFDATA=/usr/bin/llvm-profdata
  export MOZ_PGO=1
  export MOZ_PROFILE_USE="$srcdir/mozilla-central/obj/instrumented/merged.profdata"
  export MACH_BUILD_PYTHON_NATIVE_PACKAGE_SOURCE=pip
  export MOZBUILD_STATE_PATH="$srcdir/mozbuild"
  export MOZ_BUILD_DATE="$(date -u${SOURCE_DATE_EPOCH:+d @$SOURCE_DATE_EPOCH} +%Y%m%d%H%M%S)"
  export MOZ_NOSPAM=1
  export MOZ_SOURCE_REPO="$_repo"
  export MOZILLA_OFFICIAL=1
  export RUSTC_OPT_LEVEL=3
  export MOZ_CRASHREPORTER=0
  export MOZ_DATA_REPORTING=0
  export MOZ_FETCHES_DIR=/dev/null
  export MOZBUILD_SKIP_CHECKS=1
  export MOZCONFIG="${srcdir}/mozilla-central/mozconfig"
  export RUSTC_BOOTSTRAP=1
  export LLVM=1
  export LLVM_IAS=1
  export SRC_DIR="$srcdir"

  # Compiler tuning
  export CPPFLAGS="-O3 -g0 -march=znver2 -mtune=znver2 -pipe -pthread -fomit-frame-pointer -fno-plt -falign-functions=32 -falign-loops=32 -funroll-loops -fno-semantic-interposition"
  export CFLAGS="-O3 -g0 -march=znver2 -mtune=znver2 -pipe -pthread -fomit-frame-pointer -fno-plt -falign-functions=32 -falign-loops=32 -funroll-loops -fno-semantic-interposition -fno-stack-protector -fno-asynchronous-unwind-tables -fmerge-all-constants -fno-reciprocal-math -fno-signed-zeros -fno-trapping-math"
  export CXXFLAGS="-O3 -g0 -march=znver2 -mtune=znver2 -pipe -pthread -fomit-frame-pointer -fno-plt -falign-functions=32 -falign-loops=32 -funroll-loops -fno-semantic-interposition -fvisibility-inlines-hidden -fno-stack-protector -fno-asynchronous-unwind-tables -fno-exceptions -fno-rtti -fmerge-all-constants -fno-reciprocal-math -fno-signed-zeros -fno-trapping-math"
  export LDFLAGS="-Wl,-O3 -Wl,--as-needed -Wl,--sort-common -fuse-ld=lld -Wl,--icf=all -Wl,--no-keep-memory -Wl,--lto-O3"
  export RUSTFLAGS="-C target-cpu=znver2 -C opt-level=3 -C link-arg=-fuse-ld=lld -C linker-plugin-lto -C codegen-units=1 -C debuginfo=0 -C strip=debuginfo -C target-feature=+sse4.2,+avx2,+fma"
}

build() {
  _env
  cd "${srcdir}/mozilla-central"
  ulimit -n 16384

  # 1. Bootstrap environment if missing
  if [ ! -d _virtualenvs/mach ]; then
    ./expect.sh
  fi

  # 2. Upgrade pip & setuptools
  ./mach python -m pip install --upgrade glean_parser

  # 3. Instrumented build for PGO
  echo "ac_add_options --enable-profile-generate" >> mozconfig
  ./mach build

  # 4. Run Mozillaâ€™s built-in PGO profiling session
  taskset -c 0-23 nice -n -10 ionice -c2 -n0 ./mach python build/pgo/profileserver.py --binary obj/dist/bin/firefox

  # 5. Merge generated profile data if present
  mapfile -t profraw_files < <(find ./ -type f -name '*.profraw')
  if (( ${#profraw_files[@]} )); then
      llvm-profdata merge -output=merged.profdata "${profraw_files[@]}"
      mkdir -p obj/instrumented
      cp -a merged.profdata obj/instrumented/merged.profdata
  else
      echo "Warning: no .profraw files found, skipping merge."
      exit 1
  fi

  # 6. Switch mozconfig to 'use' mode
  sed -i '/--enable-profile-generate/d' mozconfig
  echo "ac_add_options --enable-profile-use" >> mozconfig

  # 7. Final optimized rebuild
  ./mach build

  # 8. Package symbolizer
  echo "Copying llvm-symbolizer for packaging..."
  mkdir -p "${srcdir}/mozilla-central/obj-x86_64-pc-linux-gnu/dist/bin"
  cp -a /usr/bin/llvm-symbolizer \
    "${srcdir}/mozilla-central/obj-x86_64-pc-linux-gnu/dist/bin/llvm-symbolizer"
}

package() {
  _env
  cd "${srcdir}/mozilla-central"
  DESTDIR="$pkgdir" ./mach install
  local vendorjs="$pkgdir/usr/lib/$_pkgname/browser/defaults/preferences/vendor.js"
  install -Dvm644 /dev/stdin "$vendorjs" <<END
pref("intl.locale.requested", "en_US");
pref("spellchecker.dictionary_path", "/usr/share/hunspell");
pref("browser.shell.checkDefaultBrowser", false);
pref("extensions.autoDisableScopes", 11);
pref("browser.gnome-search-provider.enabled", true);
END
  local distini="$pkgdir/usr/lib/$_pkgname/distribution/distribution.ini"
  install -Dvm644 /dev/stdin "$distini" <<END
[Global]
id=archlinux
version=1.0
about=Mozilla Firefox for Arch Linux

[Preferences]
app.distributor=ETJAKEOC
app.distributor.channel=$_pkgname
app.partner.archlinux=archlinux
END
  local i theme=nightly
  for i in 16 22 24 32 48 64 128 256; do
    install -Dvm644 browser/branding/$theme/default$i.png \
      "$pkgdir/usr/share/icons/hicolor/${i}x${i}/apps/$_pkgname.png"
  done
  install -Dvm644 browser/branding/$theme/content/about-logo.png \
    "$pkgdir/usr/share/icons/hicolor/192x192/apps/$_pkgname.png"
  install -Dvm644 browser/branding/$theme/content/about-logo@2x.png \
    "$pkgdir/usr/share/icons/hicolor/384x384/apps/$_pkgname.png"
  install -Dvm644 browser/branding/$theme/content/about-logo.svg \
    "$pkgdir/usr/share/icons/hicolor/scalable/apps/$_pkgname.svg"
  install -Dvm644 ../$_pkgname-symbolic.svg -t "$pkgdir/usr/share/icons/hicolor/symbolic/apps"
  install -Dvm644 ../$_pkgname.desktop -t "$pkgdir/usr/share/applications"
  install -Dvm644 ../org.mozilla.$_pkgname.metainfo.xml -t "$pkgdir/usr/share/metainfo"
  install -Dvm755 /dev/stdin "$pkgdir/usr/bin/$_pkgname" <<END
#!/bin/sh
exec /usr/lib/$_pkgname/firefox "\$@"
END
  local sprovider="$pkgdir/usr/share/gnome-shell/search-providers/$_pkgname.search-provider.ini"
  install -Dvm644 /dev/stdin "$sprovider" <<END
[Shell Search Provider]
DesktopId=$_pkgname.desktop
BusName=org.mozilla.${_pkgname//-/_}.SearchProvider
ObjectPath=/org/mozilla/${_pkgname//-/_}/SearchProvider
Version=2
END
}
