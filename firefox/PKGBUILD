makedepends=(cbindgen clang compiler-rt diffutils dump_syms expect imake lld llvm mercurial mesa nasm nodejs python python-async_generator python-selenium-bin python-trio-websocket python-wsproto sccache rust unzip wasi-compiler-rt wasi-libc wasi-libc++ wasi-libc++abi xorg-server-xvfb yasm zip)
_repo=https://hg-edge.mozilla.org/mozilla-central
source=(hg+$_repo expect.sh mozconfig firefox-symbolic.svg firefox.desktop org.mozilla.firefox.metainfo.xml)
sha256sums=('SKIP'
            'SKIP'
            '0040aaab8495c1f9ba170bf5882c8744b12a4fde3eeb8eaa65313e680d9d44e9'
            'a9b8b4a0a1f4a7b4af77d5fc70c2686d624038909263c795ecc81e0aec7711e9'
