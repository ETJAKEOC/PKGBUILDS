options=('!debug' '!docs' '!emptydirs' '!ccache' '!lto' 'buildflags' 'makeflags' 'strip')

_where="$(pwd)"

pkgver() {
  cd mozilla-central
  local version=$(<browser/config/version_display.txt)
  local date=$(date +%Y%m%d)
  local counter=1
  local rev=$(hg id -i -r. | sed 's/+$//')
  local last_rev=${pkgver##*+h} tmp=${pkgver#*+}; tmp=${tmp%+*}
  local last_date=${tmp%.*} last_counter=${tmp#*.}
  if [[ $date == $last_date ]]; then
    if [[ $rev == $last_rev ]]; then
      counter=$last_counter
    else
      counter=$((last_counter + 1))
    fi
  fi
  echo $version+$date.$counter+h$rev
}

prepare() {
  mkdir -p "${srcdir}/mozbuild"
  cp -a "${_where}/"{expect.sh,mozconfig} "${srcdir}/mozilla-central"
  printf "AIzaSyDwr302FpOSkGRpLlUpPThNTDPbXcIn_FM" > "${srcdir}/mozilla-central/google-api-key"
}

_env() {
  # Generic tuning
  export JS_GC_SMALL_CHUNK_SIZE=4096
  export MOZ_JIT_THREAD_PRIORITY=high
  export MOZ_JIT_USE_FAST_ISOLATED_HEAPS=1
  export MOZ_JIT_THREAD_STACK_SIZE=4096
  export MOZ_JIT_OPT_LEVEL=3
  export MOZ_LTO_OPTLEVEL=3
  export MOZ_AVX2=1
  export LLVM_PROFDATA=/usr/bin/llvm-profdata
  export MACH_BUILD_PYTHON_NATIVE_PACKAGE_SOURCE=pip
  export MOZBUILD_STATE_PATH="$srcdir/mozbuild"
  export MOZ_BUILD_DATE="$(date -u${SOURCE_DATE_EPOCH:+d @$SOURCE_DATE_EPOCH} +%Y%m%d%H%M%S)"
  export MOZ_NOSPAM=1
  export MOZ_SOURCE_REPO="$_repo"
  export MOZILLA_OFFICIAL=1
  export RUSTC_OPT_LEVEL=3
  export MOZ_PGO_NARROW=0
  export MOZ_CRASHREPORTER=0
  export MOZ_DATA_REPORTING=0
  export MOZ_FETCHES_DIR=/dev/null
  export MOZBUILD_SKIP_CHECKS=1
  export MOZCONFIG="${srcdir}/mozilla-central/mozconfig"
  export RUSTC_BOOTSTRAP=1
  export LLVM=1
  export LLVM_IAS=1
  export LLVM_PROFDATA=/usr/bin/llvm-profdata
  export LLVM_PROFILE_FILE="code-%p.profraw"
  export SRC_DIR="$srcdir"
}

build() {
  _env
  cd "${srcdir}/mozilla-central"
  ulimit -n 20480

  # 1. Bootstrap environment
  ./expect.sh
#  ./mach bootstrap

  # 2. Upgrade pip & setuptools
  ./mach python -m pip install --upgrade glean_parser

  # 3. Instrumented build for PGO
  export MOZ_PROFILE_GENERATE="$srcdir/mozilla-central/obj/instrumented/merged.profdata"
  ./mach build

  # 4. Run Mozillaâ€™s built-in PGO profiling session
  ./mach python build/pgo/profileserver.py --binary obj/dist/bin/firefox

  # 5. Merge generated profile data if present
  mapfile -t profraw_files < <(find ./ -type f -name '*.profraw')
  if (( ${#profraw_files[@]} )); then
      llvm-profdata merge -output=merged.profdata "${profraw_files[@]}"
      mkdir -p obj/instrumented
      cp -a merged.profdata obj/instrumented/merged.profdata
  else
      echo "Warning: no .profraw files found, skipping merge."
      exit 1
  fi

  # 6. Switch mozconfig to 'use' mode
  sed -i '/--enable-profile-generate/--enable-profile-use' mozconfig
  export MOZ_PROFILE_USE="$srcdir/mozilla-central/obj/instrumented/merged.profdata"

  # 7. Final optimized rebuild
  ./mach build

  # 8. Package symbolizer
  echo "Copying llvm-symbolizer for packaging..."
  mkdir -p "${srcdir}/mozilla-central/obj-x86_64-pc-linux-gnu/dist/bin"
  cp -a /usr/bin/llvm-symbolizer \
    "${srcdir}/mozilla-central/obj-x86_64-pc-linux-gnu/dist/bin/llvm-symbolizer"

  # 9. BOLT Optimizations
  llvm-bolt obj-x86_64-pc-linux-gnu/dist/bin/firefox -o obj-x86_64-pc-linux-gnu/dist/bin/firefox.bolt \
    -reorder-data=cache \
    -reorder-blocks=ext-tsp \
    -reorder-functions=hfsort \
    -split-functions=2 \
    -icf=1
  mv obj-x86_64-pc-linux-gnu/dist/bin/firefox.bolt obj-x86_64-pc-linux-gnu/dist/bin/firefox
  llvm-bolt obj-x86_64-pc-linux-gnu/dist/bin/libxul.so \
    -o obj-x86_64-pc-linux-gnu/dist/bin/libxul.bolt \
    -reorder-data=cache \
    -reorder-blocks=ext-tsp \
    -reorder-functions=hfsort \
    -split-functions=2 \
    -icf=1
  mv obj-x86_64-pc-linux-gnu/dist/bin/libxul.bolt obj-x86_64-pc-linux-gnu/dist/bin/libxul.so
}

package() {
  _env
  cd "${srcdir}/mozilla-central"
  DESTDIR="$pkgdir" ./mach install
  local vendorjs="$pkgdir/usr/lib/firefox/browser/defaults/preferences/vendor.js"
  install -Dvm644 /dev/stdin "$vendorjs" <<END
pref("intl.locale.requested", "en_US");
pref("spellchecker.dictionary_path", "/usr/share/hunspell");
pref("browser.shell.checkDefaultBrowser", true);
pref("extensions.autoDisableScopes", 11);
pref("browser.gnome-search-provider.enabled", false);
END
  local distini="$pkgdir/usr/lib/firefox/distribution/distribution.ini"
  install -Dvm644 /dev/stdin "$distini" <<END
[Global]
id=archlinux
version=1.0
about=Mozilla Firefox for Arch Linux

[Preferences]
app.distributor=ETJAKEOC
app.distributor.channel=firefox
app.partner.archlinux=archlinux
END
  local i theme=nightly
  for i in 16 22 24 32 48 64 128 256; do
    install -Dvm644 browser/branding/$theme/default$i.png \
      "$pkgdir/usr/share/icons/hicolor/${i}x${i}/apps/firefox.png"
  done
  install -Dvm644 browser/branding/$theme/content/about-logo.png \
    "$pkgdir/usr/share/icons/hicolor/192x192/apps/firefox.png"
  install -Dvm644 browser/branding/$theme/content/about-logo@2x.png \
    "$pkgdir/usr/share/icons/hicolor/384x384/apps/firefox.png"
  install -Dvm644 browser/branding/$theme/content/about-logo.svg \
    "$pkgdir/usr/share/icons/hicolor/scalable/apps/firefox.svg"
  install -Dvm644 ../firefox-symbolic.svg -t "$pkgdir/usr/share/icons/hicolor/symbolic/apps"
  install -Dvm644 ../firefox.desktop -t "$pkgdir/usr/share/applications"
  install -Dvm644 ../org.mozilla.firefox.metainfo.xml -t "$pkgdir/usr/share/metainfo"
  install -Dvm755 /dev/stdin "$pkgdir/usr/bin/firefox" <<END
#!/bin/sh
exec /usr/lib/firefox/firefox "\$@"
END
  local sprovider="$pkgdir/usr/share/gnome-shell/search-providers/firefox.search-provider.ini"
  install -Dvm644 /dev/stdin "$sprovider" <<END
[Shell Search Provider]
DesktopId=firefox.desktop
BusName=org.mozilla.${firefox//-/_}.SearchProvider
ObjectPath=/org/mozilla/${firefox//-/_}/SearchProvider
Version=2
END
}
