export LDFLAGS="-fuse-ld=lld -Wl,-O3 -Wl,--as-needed -Wl,--sort-common -Wl,--icf=all -Wl,--no-keep-memory -Wl,--lto-O3"
export RUSTFLAGS="-C target-cpu=znver2 -C opt-level=3 -C link-arg=-fuse-ld=lld -C codegen-units=1"

